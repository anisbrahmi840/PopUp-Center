{% trans_default_domain 'FOSUserBundle' %}

<div class="container">
    <div class="row" class="mx-auto" style="width: 600px; margin: auto; margin-bottom: 10%; margin-top: 15%;">

<div class="fos_user_user_show">
    <div class="row">
        <img src="{{ vich_uploader_asset(  app.user   , 'imageFile') }}" alt="" class="ima" style="margin-top: 15%;" />
    </div>

    <p>{{ 'profile.show.username'|trans }}: {{ user.username }}</p>
    <p>{{ 'profile.show.email'|trans }}: {{ user.email }}</p>
    <a href="{{ path('fos_user_profile_edit') }}" class="btn btn-primary">Edit</a>
    <a href="{{ path('edit_image', {'i': user.id}) }}" class="btn btn-primary">Edit Image</a>


    <H1>all courses</H1>
    <ul>
        <table class="table">
            <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">Days</th>
                <th scope="col">Course start</th>
            </tr>
            </thead>
            <tbody>
            {% for course in user.getcourses() %}
            <tr>
                <th scope="row">{{ loop.index }}</th>
                <td><a href="{{ path('course_index', {'id': course.id}) }}"> {{ course.name|e }} </a></td>
                <td>{{ course.price|e }}</td>
                <td>{{ course.days|e }}</td>
                <td>{{ course.courseStart|date("d-m-Y")  }} </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>

    </ul>


</div>
    </div>
</div>
