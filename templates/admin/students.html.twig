{% extends 'baseAdmin.html.twig' %}

{% block title %}Admin students!{% endblock %}

{% block body %}
    <div class="container">

        <div class="row justify-content-md-center">
            <div class="col-md">
                <!--   Kitchen Sink -->
                <div class="panel panel-default">
                    <div class="panel-heading">
                        students
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Enabled</th>
                                    <th>Image</th>
                                    <th>Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for student in students %}
                                    <tr>
                                        <td>{{ loop.index }}</td>
                                        <td>{{ student.username }}</td>
                                        <td>{{ student.email }}</td>
                                        <td>{{ student.enabled }}</td>
                                        <td><img src="{{ vich_uploader_asset( student   , 'imageFile') }}" alt="" class="imag"  /></td>
                                        <td><a href="{{ path('fos_user_profile_edit', {'id': student.id}) }}" class="btn btn-primary"><i class="fa fa-pencil"> Edit</i></a></td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <a href="{{ path('adduser') }}" class="btn btn-info"> New Student</a>
                    </div>
                </div>
                <!-- End  Kitchen Sink -->
            </div>
        </div>
    </div>


{% endblock %}
