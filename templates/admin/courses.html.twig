{% extends 'baseAdmin.html.twig' %}

{% block title %}Admin courses!{% endblock %}

{% block body %}
    <div class="container">

    <div class="row justify-content-md-center">
        <div class="col-md">
            <!--   Kitchen Sink -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    Courses
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Price</th>
                                <th>Place</th>
                                <th>Professor</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for course in courses %}
                            <tr>
                                <td>{{ loop.index }}</td>
                                <td>{{ course.name }}</td>
                                <td>{{ course.price }}</td>
                                <td>{{ course.palace }}</td>
                                <td>{{ course.professor }}</td>
                                <td><a href="{{ path('course_edit', {'id': course.id}) }}" class="btn btn-primary"><i class="fa fa-pencil"> Edit</i></a></td>
                            </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <a href="{{ path('course_new') }}" class="btn btn-info"> New course</a>
                </div>
            </div>
            <!-- End  Kitchen Sink -->
        </div>
    </div>
    </div>


{% endblock %}
