{% extends 'base.html.twig' %}

{% block title %}Course{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">

            <h1>Course</h1>

            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ course.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ course.name }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ course.description }}</td>
                </tr>
                <tr>
                    <th>Price</th>
                    <td>{{ course.price }}</td>
                </tr>
                <tr>
                    <th>Total_students</th>
                    <td>{{ course.totalStudents }}</td>
                </tr>
                <tr>
                    <th>Course_duration</th>
                    <td>{{ course.courseDuration }}</td>
                </tr>
                <tr>
                    <th>Course_start</th>
                    <td>{{ course.courseStart ? course.courseStart|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>Palace</th>
                    <td>{{ course.palace }}</td>
                </tr>
                <tr>
                    <th>Days</th>
                    <td>{{ course.days }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td>{{ course.image }}</td>
                </tr>
                </tbody>
            </table>

            <a class="btn btn-primary" href="{{ path('course_participer', {'id': course.id, 'idu': app.user.id}) }}">Participer</a>
            <a href="{{ path('course_list') }}">back to list</a>

            <a href="{{ path('course_edit', {'id': course.id}) }}">edit</a>

            {{ include('course/_delete_form.html.twig') }}

        </div>
    </div>

{% endblock %}
