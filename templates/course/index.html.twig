{% extends 'base.html.twig' %}

{% block title %}Course index{% endblock %}

{% block body %}
    <h1>Course index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Total_students</th>
                <th>Course_duration</th>
                <th>Course_start</th>
                <th>Palace</th>
                <th>Days</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for course in courses %}
            <tr>
                <td>{{ course.id }}</td>
                <td>{{ course.name }}</td>
                <td>{{ course.price }}</td>
                <td>{{ course.totalStudents }}</td>
                <td>{{ course.courseDuration }}</td>
                <td>{{ course.courseStart ? course.courseStart|date('Y-m-d') : '' }}</td>
                <td>{{ course.palace }}</td>
                <td>{{ course.days }}</td>
                <td>{{ course.image }}</td>
                <td>
                    <a href="{{ path('course_show', {'id': course.id}) }}">show</a>
                    <a href="{{ path('course_edit', {'id': course.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('course_new') }}">Create new</a>
{% endblock %}
